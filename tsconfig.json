{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@services/*": [
        "modules/appointments/services/*",
        "modules/users/services/*"
      ],
      "@entities/*": [
        "modules/appointments/infra/typeorm/entities/*",
        "modules/users/infra/typeorm/entities/*"
      ],
      "@repositories/*": [
        "modules/appointments/repositories/*"
      ]
    }
  }
}
